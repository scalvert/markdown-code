{
  "name": "markdown-code",
  "version": "0.6.1",
  "description": "Keep code examples in Markdown synchronized with actual source files",
  "keywords": [
    "markdown",
    "documentation",
    "code-sync",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/scalvert/markdown-code.git"
  },
  "license": "MIT",
  "author": "",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "md-code": "dist/cli.js",
    "markdown-code": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write \"**/*.ts\" \"**/*.md\"",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:all": "npm run lint && npm run test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/mdast": "^4.0.3",
    "fast-glob": "^3.3.2",
    "language-map": "^1.5.0",
    "mdast": "^3.0.0",
    "picocolors": "^1.1.1",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.4",
    "unist-util-visit": "^5.0.0",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@release-it-plugins/lerna-changelog": "^5.0.0",
    "@scalvert/bin-tester": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/yargs": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^8.54.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "release-it": "^15.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    }
  }
}
